// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Full Stack LMS",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	//"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	//"features": {
	//	"ghcr.io/devcontainers/features/github-cli:1": {}
	//},
	// Docker compose
	"dockerComposeFile": [
		"../docker-compose.yml"
	],
	"service": "django",
	"workspaceFolder": "/app",
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "pip install -r dependencias.txt",
	"customizations": {
		"vscode": {
			"extensions": [
				"njpwerner.autodocstring",
				"hossaini.bootstrap-intellisense",
				"ReprEng.csv",
				"batisteo.vscode-django",
				"almahdi.code-django",
				"junstyle.vscode-django-support",
				"kisstkondoros.vscode-gutter-preview",
				"oderwat.indent-rainbow",
				"ms-python.vscode-pylance",
				"ms-python.python",
				"ms-python.debugpy",
				"ms-python.vscode-python-envs",
				"mechatroner.rainbow-csv",
				"HansUXdev.bootstrap5-snippets",
				"thebarkman.vscode-djaneiro",
				"bigonesystems.django",
				"bibhasdn.django-html",
				"usernamehw.errorlens",
				"WaseemAkram.jinja-snippets-flask",
				"KevinRose.vsc-python-indent",
				"ms-python.autopep8",
				"ms-python.black-formatter",
				"formulahendry.code-runner",
				"ms-python.isort",
				"aaron-bond.better-comments",
				"formulahendry.auto-rename-tag",
				"formulahendry.auto-close-tag",
				"ms-toolsai.jupyter",
				"ms-toolsai.vscode-jupyter-cell-tags",
				"ms-toolsai.jupyter-keymap",
				"ms-toolsai.jupyter-renderers",
				"ms-toolsai.vscode-jupyter-slideshow",
				"shd101wyy.markdown-preview-enhanced",
				"christian-kohler.path-intellisense",
				"esbenp.prettier-vscode"
			]
		}
	}
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}